packages:
  yum:
    git: []
files:
  "/home/ec2-user/setup.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      export SECRET_KEY_BASE="dummykey"
      export DATABASE_URL="postgresql://$RDS_USERNAME:$RDS_PASSWORD@$RDS_HOSTNAME/$RDS_DB_NAME"
      export GOVUK_NOTIFY_API_KEY="dummyvalue"
      sudo echo 'export SECRET_KEY_BASE="dummy"' >> /opt/elasticbeanstalk/support/envvars
      sudo echo 'export DATABASE_URL="postgresql://$RDS_USERNAME:$RDS_PASSWORD@$RDS_HOSTNAME/$RDS_DB_NAME"' >> /opt/elasticbeanstalk/support/envvars
      sudo echo 'export GOVUK_NOTIFY_API_KEY="dummyvalue"' >> /opt/elasticbeanstalk/support/envvars

 commands:
   01_set_secret_key:
      command:"source /home/ec2-user/setup.sh"
