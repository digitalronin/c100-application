files:
  "/opt/elasticbeanstalk/hooks/appdeploy/pre/03_install.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      echo 'export EXTERNAL_URL="c100app-env.eu-west-2.elasticbeanstalk.com"' >> /opt/elasticbeanstalk/support/envvars
      echo 'export SECRET_KEY_BASE="dummy"' >> /opt/elasticbeanstalk/support/envvars
      echo 'export DATABASE_URL="postgresql://$RDS_USERNAME:$RDS_PASSWORD@$RDS_HOSTNAME/$RDS_DB_NAME"' >> /opt/elasticbeanstalk/support/envvars
      echo 'export GOVUK_NOTIFY_API_KEY="dummyvalue"' >> /opt/elasticbeanstalk/support/envvars
